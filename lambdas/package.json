{
  "name": "beachist-lambdas",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist && zip dist/index.js.zip dist/*",
    "deploy": "npm install && npm run build && npx cdk deploy beachist-$STAGE --require-approval never --exclusively -c stage=$STAGE",
    "deploy-pipeline": "npm install && npm run build && npx cdk deploy beachist-$STAGE-pipeline --require-approval never -c stage=$STAGE",
    "lint": "eslint --cache --ext '.js,.ts' ./src/ ./cdk/"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@aws-cdk/aws-iot-actions-alpha": "^2.20.0-alpha.0",
    "@aws-cdk/aws-iot-alpha": "^2.20.0-alpha.0",
    "@types/aws-lambda": "^8.10.93",
    "@types/node": "^17.0.16",
    "@typescript-eslint/eslint-plugin": "~5.19.0",
    "@typescript-eslint/parser": "~5.19.0",
    "@vercel/ncc": "^0.33.1",
    "aws-cdk": "~2.20.0",
    "aws-cdk-lib": "~2.20.0",
    "constructs": "^10.0.107",
    "eslint": "^8.8.0",
    "ts-node": "^10.5.0",
    "typescript": "~4.6.3",
    "import-sort-cli": "~6.0.0",
    "import-sort-parser-babylon": "~6.0.0",
    "import-sort-parser-typescript": "~6.0.0",
    "import-sort-style-module": "~6.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-iot-data-plane": "^3.52.0",
    "@aws-sdk/client-iot": "^3.52.0",
    "axios": "^0.25.0",
    "date-fns": "^2.28.0",
    "winston": "^3.6.0",
    "zod": "^3.11.6"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "import-sort --write",
      "eslint --cache --ext '.js,.ts' --fix"
    ],
    "cdk/**/*.{js,ts}": [
      "import-sort --write",
      "eslint --cache --ext '.js,.ts' --fix"
    ]
  }
}
